<?php

// strtotime() 将英文文本日期时间描述解析成 Unix时间戳

echo time();
echo "\n";
echo strtotime('now');
echo "\n";

echo date('Y-m-d H:i:s',time()+24*3600); // tomorrow
echo "\n";

echo date('Y-m-d H:i:s',time('+1 day')); // 超过一天用 days 负数
echo date('Y-m-d H:i:s',time('+2 days')); // 超过一天用 days 负数
echo date('Y-m-d H:i:s',time('+1 month')); // 超过一天用 days 负数
echo date('Y-m-d H:i:s',time('+1 years 3 months 12 days')); // 超过一天用 days 负数
echo "\n";