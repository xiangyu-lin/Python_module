<?php

// microtime() 获取微秒
// 计算php程序执行时间等

echo time();

echo "\n";

echo microtime();
echo microtime(true); // 浮点数 4位小数

$start_time = microtime(true); 
// 计算执行时间
for ($i = 0; $i <= 10000; $i++) {
    echo $i;
}
$end_time = microtime(true);
echo "\n";
$run_time = $end_time - $start_time;
echo "$run_time";